<%- include("partials/header") %>
<body>
  <%- include("partials/navbar") %>
  <div class="container">
    <h2>Add New Employee</h2>
    <form
      action="/update/<%= data._id %> "
      method="post"
      enctype="multipart/form-data"
    >
      <div class="form-group">
        <label for="name">Name:</label>
        <input
          type="text"
          class="form-control"
          id="name"
          placeholder="Enter Name"
          value=" <%= data.name %> "
          name="name"
        />
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input
          type="email"
          class="form-control"
          id="email"
          placeholder="Enter email"
          value=" <%= data.email %> "
          name="email"
        />
      </div>
      <div class="form-group">
        <label for="phone">Phone:</label>
        <input
          type="text"
          class="form-control"
          id="phone"
          placeholder="Enter Phone no."
          value=" <%=data.phone %> "
          name="phone"
        />
      </div>
      <div class="form-group">
        <label for="image">Image:</label>
        <input
          type="file"
          class="form-control form-control-lg"
          name="image"
          required
        />
        <img src="<%= data.image %> " width="50" class="img-thumbnail mt-1" />
      </div>
      <input type="hidden" name="old_image" value=" <%= data.image %> ">
      <button
        type="submit"
        value="update"
        class="align-middle btn btn-success btn-lg mt-3"
      >
        update
      </button>
    </form>
  </div>

  <%- include("partials/scripts") %>
</body>
